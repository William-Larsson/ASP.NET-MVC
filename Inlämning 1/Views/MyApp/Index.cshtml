@model MoviesModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Umeå biosalong</h1>

<h4>Köp dina biobiljetter här!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ListOfMovies" class="control-label"></label>
                <div class="align-content-lg-start">
                    @Html.DropDownList("Movies", (IEnumerable<SelectListItem>)Model.ListOfMovies)
                </div>
                <span asp-validation-for="ListOfMovies" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Tickets" class="control-label"></label>
                <input asp-for="Tickets" class="form-control" />
                <span asp-validation-for="Tickets" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Popcorn" /> @Html.DisplayNameFor(model => model.Popcorn)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Köp" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
